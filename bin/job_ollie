#!/bin/bash
#SBATCH --job-name=fesom1.4KPP
#SBATCH -p mpp
#SBATCH --ntasks=288
#SBATCH --time=12:00:00

set -x

ulimit -s 1000000

module purge
module load intel
module load intel.compiler
module load netcdf

# determine JOBID
JOBID=`echo $PBS_JOBID |cut -d"." -f1`
export I_MPI_FABRICS=shm:tmi

cd /home/ollie/dsidoren/fesom2.0/bin
date
srun --mpi=pmi2 -l -n 288 ./fvom.x > fvom.out
date
qstat -f $PBS_JOBID
