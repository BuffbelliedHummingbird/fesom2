# Include path for MPI header file
MPIROOT            =  /sw/rhel6-x64/intel/impi/5.1.3.223/compilers_and_libraries/linux/mpi/intel64/
MPI_INC            = -I$(MPIROOT)/include

PARMS_DEFS = -DPARMS -DUSE_MPI -DREAL=double -DDBL -DFORTRAN_UNDERSCORE -DVOID_POINTER_SIZE_8 -DHAS_BLAS 

######################################################

# Preprocessor
CPP = /usr/bin/cpp -P -C

######################################################

# Compiler and Linker
CC = icc 
FC = ifort -r8
LD = $FC

# Optimization specs for compiler
OPT  = -O3 -no-prec-div -no-prec-sqrt -fast-transcendentals -fp-model precise
COPT = 

#######################################################
# for pARMS-Library, archive and options

AR       = ar
ARFLAGS  = -cr
EXTFLAGS = 
